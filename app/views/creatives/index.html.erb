<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">

        <div class="card">
          <div class="header">
            <h4 class="title">All Creatives</h4>
            <p class="category">All the creatives (ads) you have uploaded</p>
            <%= link_to 'Upload new Creative', new_creative_path %>
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
              <thead>
              <th>ID</th>
              <th>Name</th>
              <th>Created At</th>
              <th></th>
              <th></th>
              </thead>
              <tbody>
              <% @creatives.each do |creative| %>
                <tr>
                  <td><%= creative.id %></td>
                  <td><%= link_to creative.name, creative %></td>
                  <td><%= creative.created_at.to_formatted_s(:long) %></td>
                  <td>
                    <%= link_to 'Edit', edit_creative_path(creative) %>
                    |
                    <%= link_to 'Destroy', creative, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                  <td></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>