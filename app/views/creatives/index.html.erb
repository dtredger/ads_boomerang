<div class="col-sm-8 col-sm-offset-2">
    <h1>Creatives</h1>

    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @creatives.each do |creative| %>
          <tr>
            <td><%= link_to creative.name, creative %></td>
            <td><%= link_to 'Edit', edit_creative_path(creative), class: "btn btn-default" %></td>
            <td><%= link_to 'Destroy', creative, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Creative', new_creative_path %>
</div>