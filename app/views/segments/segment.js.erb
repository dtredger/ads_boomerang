(function(){
  try {
    var img = new Image();
    var body = document.getElementsByTagName('body')[0];
    var imgSrc = "<%= url_encode(@segment.retarget_src) %>";

    img.onload = function() {
      body.appendChild(img);
    };
    img.setAttribute('width', '0');
    img.setAttribute('width', '0');
    img.setAttribute('src', decodeURIComponent(imgSrc));

    if(document.location.search.match("adsboomerangtest=verify")) {
      alert("Success! Your Ads Boomerang tag is installed.");
    }
  } catch (e) {
    console.log(e);
  }
})();
