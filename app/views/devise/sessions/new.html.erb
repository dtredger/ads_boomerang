
<div class="col-md-6 col-md-offset-3 register-modal">
  <div class="modal-header" style="background: #71bc37">
    <h4 class="modal-title text-center" id="myModalLabel" style="color: white;">
      Sign In to <b>AdsDash</b>
    </h4>
  </div>
  <div class="modal-body" style="padding: 30px;">
    <div class="row">
      <div class="col-sm-6">
        <div class="well">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <label for="email" class="control-label">Email</label>
              <%= f.email_field :email, autofocus: true, id:"email_modal", type:"email", placeholder:"name@company.com", class:"form-control" %>
              <span class="help-block"></span>
            </div>
            <div class="form-group">
              <label for="password" class="control-label">Password</label>
              <%= f.password_field :password, autocomplete: "off", placeholder:"Please enter your password", class:"form-control", required: true %>
              <span class="help-block"></span>
            </div>
            <div id="loginErrorMsg" class="alert alert-error hide">Wrong username or password</div>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> Remember login
              </label>
              <p class="help-block">(if this is a private computer)</p>
            </div>
            <%= button_tag(type: 'submit', class: "btn btn-success btn-block") do %>
              Login to account
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-sm-6">
        <p class="lead">Don't have an account? Sign up for <span class="text-success">Free</span></p>
        <ul class="list-unstyled" style="line-height: 2">
          <li><span class="fa fa-check text-success"></span> Free until you start advertising</li>
          <li><span class="fa fa-check text-success"></span> Transparent monthly pricing</li>
          <li><span class="fa fa-check text-success"></span> Cancel your plan anytime</li>
          <li><span class="fa fa-check text-success"></span> Handles multiple ad sizes</li>
          <li><span class="fa fa-check text-success"></span> Fully automated optimization</li>
          <li><span class="fa fa-check text-success"></span> Set-and-forget system</li>
        </ul>
        <p>
          <%= link_to "Sign up for Free", new_advertiser_registration_path, class: "btn btn-primary" %>
        </p>
      </div>
      <div class="col-sm-12 text-center">
        <hr>
        <div class="col-sm-6">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
          <% end -%>
        </div>
        <div class="col-sm-6">
          <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%= link_to "Didn't receive confirmation instructions?",
                        new_confirmation_path(resource_name) %><br />
          <% end -%>
        </div>

      </div>
    </div>

  </div>
</div>

<style>
  .register-modal {
    background-color: #fff;
    padding: 0;
    margin-top: 10%;
    -webkit-box-shadow: 10px 10px 46px -6px rgba(0,0,0,0.75);
    -moz-box-shadow: 10px 10px 46px -6px rgba(0,0,0,0.75);
    box-shadow: 10px 10px 46px -6px rgba(0,0,0,0.75);
  }
</style>