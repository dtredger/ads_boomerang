<% if alert %>
  <script !src="">
    $(document).ready(function() {
      $.notify({
            icon: "pe-7s-warning",
            message: "<%= alert %>"
          },{
            type: "danger",
            timer: 2000,
            placement: { from: "top", align: "center" }
          }
      );
    });

  </script>
<% end %>

<% if notice %>
  <script !src="">
    $(document).ready(function() {
      $.notify({
            icon: "pe-7s-speaker",
            message: "<%= notice %>"
          }, {
            type: "info",
            timer: 2000,
            placement: {from: "top", align: "center"}
          }
      );
    });
  </script>
<% end %>