<!-- render "layouts/dashboard/segments", subscription: @advertiser.subscription -->


<div class="col-md-6">
  <div class="card">
    <div class="header">
      <h4 class="title">Ads Boomerang Subscription</h4>
      <p class="category">Details about your subscription</p>
    </div>
    <div class="content">
      <% if subscription && subscription.plan %>
        <h4><%= subscription.plan.name %></h4>
        <p>Signed up on: <%= subscription.plan.created_at.to_date %></p>
        <p><%= subscription.plan.amount.to_money %> / <%= subscription.plan.interval %></p>
      <% else %>
        <%= link_to "Subscribe to a plan", new_subscription_path %>
      <% end %>

      <div class="footer">
        <hr>
        <div class="stats">
          <i class="fa fa-check"></i> Data up-to-date as of <%= Time.now.to_s %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if subscription %>
  <div class="col-md-6">
    <div class="card">
      <div class="header">
        <h4 class="title">Payment Details</h4>
        <p class="category">Details about your payment history</p>
      </div>
      <div class="content">
        <p>Subscription Status: <%= subscription.state %></p>

        <p>Card: <%= subscription.card_type %> **** **** **** <%= subscription.card_last4 %></p>

        <h4>Invoices:</h4>
        <%= render "layouts/dashboard/invoices", invoices: subscription.sales %>

        <div class="footer">
          <hr>
          <div class="stats">
            <i class="fa fa-check"></i> Data up-to-date as of <%= Time.now.to_s %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

