<div class="sidebar">
  <div class="sidebar-wrapper">
    <div class="logo">
      <%= image_tag "pages/logo-small.png", style: "display: inline;padding-left:30px" %>
      <%= link_to root_url, class:"simple-text", style:"display: inline;vertical-align: bottom;" do %>
        Ads Boomerang
      <% end %>
    </div>

    <ul class="nav">
      <li id="dashboard-link" class="<%= 'active' if controller_name == 'advertisers' %>">
        <%= link_to root_path do %>
          <i class="pe-7s-note2"></i>
          <p>Dashboard Home</p>
        <% end %>
      </li>

      <li id="websites-link" class="<%= 'active' if controller_name == 'websites' %>">
        <%= link_to websites_path do %>
          <i class="pe-7s-network"></i>
          <p>Websites
            (<%= current_advertiser.websites.count %>/<%= current_advertiser.max_websites %>)
          </p>
        <% end %>
      </li>

      <% if current_advertiser.creative_assets.any? %>
        <li id="creatives-link" class="<%= 'active' if controller_name == 'creatives' %>">
          <%= link_to creative_assets_path do %>
            <i class="pe-7s-albums"></i>
            <p>Ad Library</p>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>